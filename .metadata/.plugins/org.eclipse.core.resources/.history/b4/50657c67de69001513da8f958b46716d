package CircularLinkedList;

import java.util.Scanner;

public class CircularList {
	
	private static CLLNode Head;
	private static CLLNode Tail=null;
	
	public int CircularListLength()
	{
		if(Head==null)
		{
			return 0;
		}
		int length=0;
		CLLNode current=Head;
		while(current!=Tail)
		{
			length++;
			current=current.next;
		}
		return length+1;
	}
	
	public static void generateCLL()
	{
		System.out.println("Enter the elements");
		CLLNode temp=new CLLNode();
		Scanner s = new Scanner(System.in);
		int data=s.nextInt();
		if(Head.data!=Integer.MIN_VALUE && data!=-1)
		{
			temp.data=data;
			temp.next=temp;
			Head=temp;
			Tail=temp;
			
		}
		
		while(data!=-1)
		{
			temp.data=data;
			Tail.next=temp;
			temp.next=Head;
			data=s.nextInt();
		}
		
	}
	public static void printCLL()
	{
		CLLNode current = Head;
		while(current!=Tail)
		{
			System.out.println(current.data);
			current=current.next;
		}
		System.out.println(Tail.data);
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
			generateCLL();
			printCLL();
	}

}
