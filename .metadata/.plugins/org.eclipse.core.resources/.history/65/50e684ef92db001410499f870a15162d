package DataStructures;

public class StackReverseStack {
	
	public static StackUsingLinkedList reverse(StackUsingLinkedList s) throws StackEmptyException
	{
		if (s.size() == 0) {
			return s;
		}
		int element = s.pop();
		reverse(s).push(element);
		 return s;
		
	}
	public static void transfer(StackUsingLinkedList s) throws StackEmptyException
	{
		StackUsingLinkedList s2= new StackUsingLinkedList();
		int size = s.size();
		for(int i=0;i<size;i++)
		{
			s2.push(s.pop());
		}
		s2=reverse(s2);
		for(int i=0;i<size;i++)
		{
			s.push(s2.pop());
		}
	}

}
