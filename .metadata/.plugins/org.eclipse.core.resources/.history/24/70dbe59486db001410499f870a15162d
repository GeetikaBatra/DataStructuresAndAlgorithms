package DataStructures;

public class StackReverseStack {
	
	
	static StackUsingLinkedList s2 = new StackUsingLinkedList();
	public static StackUsingLinkedList reverse(StackUsingLinkedList s1) throws StackEmptyException
	{  
	
		StackReversed(s1);
		int size = s1.size();
		for(int i=0;i<size;i++)
		{
			s1.push(s2.pop());
		}
		return s1;
		
		
	}
	public static void StackReversed(StackUsingLinkedList s) throws StackEmptyException
	{
			
		int element=s.pop();
		if(s.size()==0)
		{
			s2.push(element);
		}
		StackReversed(s);
		s2.push(element);
	}
	

}
